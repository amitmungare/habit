<!-- this is the page to register  -->
<div class="reg-div" >

    <div class="reg-main-div">
    
        <h2>Register</h2>
        
        <!-- form to enter data to register -->
        <form action="/user/createUser" method="post">
            <!-- name -->
            <div class="input-div">
                <label for="userName">Name : </label>
                <input type="text" id="userName" name="userName" placeholder="userName">
            </div>
            
            <!-- email -->
            <div class="input-div">
                <label for="email">Email : </label>
                <input type="email" id="email" name="email" placeholder="email">
            </div>
    
            <!-- password -->
            <div class="input-div">
                <label for="password">Password : </label>
                <input type="password" id="password" name="password" placeholder="password">
            </div>
    
            <!-- confirm password -->
            <div class="input-div">
                <label for="cpassword">Confirm Password : </label>
                <input type="password" id="cpassword" name="cpassword" placeholder="confirm password">
            </div>
    
            <!-- date of birth  -->
            <div class="input-div">
                <label for="dob">DOB : </label>
                <input type="text" id="dob" name="dob" placeholder="dob">
            </div>
    
            <!-- gender -->
            <div class="input-div">
                <label for="gender">Gender : </label>
                <input type="text" id="gender" name="gender" placeholder="gender">
            </div>
    
            <!-- phone number  -->
            <div class="input-div">
                <label for="phoneNo">Phone Number : </label>
                <input type="number" id="phoneNo" name="phoneNo" placeholder="phoneNo">
            </div>
    
            <!-- button to register  -->
            <div class="reg-btn-div">
                <button type="submit">Signup</button>
            </div>
    
            <!-- if the user already has an account then they can login  -->
            <p>Have a account <a class="regloglink" href="/user/login">Login</a></p>
        </form>
    
    </div>
</div>