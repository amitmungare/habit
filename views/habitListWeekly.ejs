
<div class="hlw-main-div">
    <!-- table to show habits weekly  -->
    <table>
        <thead>
            <tr>
                <!-- header displaying all the days  -->
                <td>Habit Name</td>
                <% for(let day of days){%>
                    <td><%= day %></td>
                <%}%>
            </tr>
        </thead>
        <tbody>
            <% for(let habit of habits){ %>
                <tr>
                    <!-- display all the habit names  -->
                    <td><%= habit.habitName %></td>
                    <% for(let i=0; i < habit.days.length; i++){%>
                        <td>
                            <!-- set the color of button  -->
                            <% let color = "white" %>
                            <% if(habit.days[i] =='Done'){%>
                                <% color = "green" %>
                            <% }else if(habit.days[i] =='Not Done'){ %>
                                <% color = "red" %>
                            <% } %>

                            <div class="wdropdown">
                                <button class="wdropbtn wcolor<%=color%>" type="button"><%= habit.days[i] %></button>
                                <ul class="wdropdown-content">
                                    <li><a href="/habit/update/<%= habit.id %>/<%=i%>/Done">Done</a></li>
                                    <li><a href="/habit/update/<%= habit.id %>/<%=i%>/Not%20Done">Not Done</a></li>
                                    <li><a href="/habit/update/<%= habit.id %>/<%=i%>/None">None</a></li>
                                </ul>
                            </div>
                        </td>
                    <%}%>
                </tr>
            <%}%>
        </tbody>
    </table>
</div>